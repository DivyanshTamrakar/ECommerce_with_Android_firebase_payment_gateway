<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register"
    tools:context=".RegisterActivity">


    <ImageView
        android:id="@+id/app_logo_register"
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:src="@drawable/applogo" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/login_Section_register"
        style="@style/LoginTextInputLayoutStyle"
        android:layout_width="340dp"
        android:layout_height="80dp"
        android:layout_below="@+id/app_logo_register"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:textColorHint="#fff"
        android:theme="@style/LoginTextInputLayoutStyle"
        app:boxStrokeColor="@color/white"
        app:passwordToggleEnabled="true"


        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/usrename_register"
            android:layout_width="340dp"
            android:layout_height="60dp"
            android:hint="Name"
            
            android:paddingLeft="20dp" />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/Phone_number_section_register"
        style="@style/LoginTextInputLayoutStyle"
        android:layout_width="340dp"
        android:layout_height="80dp"
        android:layout_below="@+id/login_Section_register"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:textColorHint="#fff"
        android:theme="@style/LoginTextInputLayoutStyle"
        app:boxStrokeColor="@color/white"
        app:passwordToggleEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/Phone_number_register"
            android:layout_width="340dp"
            android:layout_height="60dp"
            android:hint="Phone Number"
            android:inputType="number"
            android:maxLength="10"

            android:paddingLeft="20dp" />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/Password_Section_register"
        style="@style/LoginTextInputLayoutStyle"
        android:layout_width="340dp"
        android:layout_height="80dp"
        android:layout_below="@+id/Phone_number_section_register"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:textColorHint="#fff"
        android:theme="@style/LoginTextInputLayoutStyle"
        app:boxStrokeColor="@color/white"
        app:passwordToggleEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/password_register"
            android:layout_width="340dp"
            android:layout_height="60dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingLeft="20dp" />

    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:id="@+id/create_account_register"
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:layout_below="@+id/Password_Section_register"
        android:layout_centerHorizontal="true"
        android:background="@drawable/round_button"
        android:elevation="12dp"
        android:letterSpacing="0.1"
        android:text="Create Account"
        android:textColor="@color/white"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/Already_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/create_account_register"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:letterSpacing="0.1"
        android:text="Already Have an Account ? Login"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />


</RelativeLayout>