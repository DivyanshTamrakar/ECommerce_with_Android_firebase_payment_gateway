<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".AdminCategoryActivity">

    <TextView
        android:id="@+id/slogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Add New Product"
        android:textAlignment="center"
        android:textSize="40sp"
        android:textStyle="bold" />


    <LinearLayout
        android:id="@+id/linear1_category_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slogan"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/t_shirt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/tshirts" />


        <Space
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_weight="1"></Space>

        <ImageView
            android:id="@+id/sport_tshirt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/sports" />

        <Space
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_weight="1"></Space>

        <ImageView
            android:id="@+id/female_dresses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/female_dresses" />

    </LinearLayout>


    <LinearLayout

        android:id="@+id/linear2_category_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear1_category_list"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/sweather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/sweather" />


        <Space
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_weight="1"></Space>

        <ImageView
            android:id="@+id/glasses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/glasses" />

        <Space
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_weight="1"></Space>

        <ImageView
            android:id="@+id/purse_and_wallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/purses_bags" />

    </LinearLayout>


    <LinearLayout

        android:id="@+id/linear3_category_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear2_category_list"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/Hats"
            android:layout_width="110dp"
            android:layout_height="120dp"
            android:src="@drawable/hats" />


        <Space
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_weight="1"></Space>

        <ImageView
            android:id="@+id/shoes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/shoess" />

        <Space
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_weight="1"></Space>

        <ImageView
            android:id="@+id/headphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/headphoness" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linear4_category_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear3_category_list"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="25dp"
        android:gravity="center"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/laptop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/laptops" />


        <Space
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_weight="1"></Space>

        <ImageView
            android:id="@+id/watches"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/watches" />

        <Space
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_weight="1"></Space>

        <ImageView
            android:id="@+id/mobiles"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/mobiles" />

    </LinearLayout>

</RelativeLayout>